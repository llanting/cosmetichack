
<div class="discover">
    <h4>ALL RECIPES</h4>

</div>

{{!-- Add the filter to search --}}

<div class="card-container">
  {{#each recipe}}
  <div class="card" >
    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Category: {{this.category}}</li>
      <li class="list-group-item">Purpose: {{this.purpose}}</li>
      {{!-- Image of level --}}
      <li class="list-group-item">Difficulty: {{this.level}}</li>
      {{!-- Image of cost --}}
      <li class="list-group-item">Cost: {{this.cost}}</li>
    </ul>
    <div class="card-body card-btns">
      <a href="/all-recipes/{{this._id}}" class="card-link btn">See recipe</a>
      {{!-- Image of star --}}
      <form method="POST" action="/my-recipes/my-favorites/{{this._id}}" class="form-links">
          <button type="submit" class="card-link fav-btn btn">Favorite</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>