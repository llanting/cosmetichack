<div class="content-page">

  <div class="discover">
      <h4>All recipes</h4>

  </div>

{{!-- Add the filter to search --}}
<form method="GET" action="/all-recipes/search">
  <div class="form-group">
    <label for="category">Category</label>
    <select class="form-control" name="category">
      <option value="empty"></option>
      <option value="hair">Hair</option>
      <option value="face">Face</option>
      <option value="body">Body</option>
    </select>
  </div>
  <div class="form-group">
    <label for="purpose">Purpose</label>
    <select class="form-control" name="purpose">
      {{#each purpose}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>
  <button type="submit">Search</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}


<div class="card-container color-all">
  {{#each recipe}}
  <div class="card" >
    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
    </div>
   
    <div class="card-body" id="card-btns">
      <a href="/all-recipes/{{this._id}}" class="card-link btn sign">See recipe</a>

      {{#if this.alreadyFav}}
        <p class="card-link btn sign fav-btn">Already Favorite<p>
      {{else}}
        <form method="POST" action="/my-recipes/my-favorites/{{this._id}}" >
          <button type="submit" class="card-link btn sign fav-btn">Favorite</button>
        </form>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
