<div class="content-page">

  <h4>All recipes</h4>
  <br>


  {{!-- Add the filter to search --}}
  <form method="GET" action="/all-recipes/search">
    <div class="form-group" class="search-label">
      <label for="category">Category</label>
      <select class="form-complete-field" name="category">
        <option value="empty"></option>
        <option value="hair">Hair</option>
        <option value="face">Face</option>
        <option value="body">Body</option>
      </select>
    </div>
    <div class="form-group">
      <label for="purpose">Purpose</label>
      <select class="form-complete-field" name="purpose">
        {{#each purpose}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    <button type="submit" class="btn">Search</button>
  </form>

  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}




{{!-- Recipes carts --}}
  
  <div class="recipes-container">

    {{#each recipe}}
      <div class="recipe-card" >

        <a href="/all-recipes/{{this._id}}">
          <img class="recipe-card-img" src="{{this.image}}" alt="Recipe icon img">
          <h6>{{this.name}}</h6>                    
        </a>

        {{#if this.alreadyFav}}
          <form method="POST" action="/all-recipes/{{this._id}}/unfavorite" >
            <button type="submit" class="fav-btn"><img src="/images/unfavorite-btn.png"></button>
          </form>
        {{else}}
          <form method="POST" action="/all-recipes/{{this._id}}/favorite" >
            <button type="submit" class="fav-btn"><img src="/images/favorite-btn.png"></button>
          </form>
        {{/if}} 
      </div>
    {{/each}}

  </div>
  
 

  

</div>

