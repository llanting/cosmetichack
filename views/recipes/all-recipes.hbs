<div class="content-page">

  <h4>All recipes</h4>


  {{!-- Add the filter to search --}}
  <form method="GET" action="/all-recipes/search">
    <div class="form-group">
      <label for="category">Category</label>
      <select class="form-control" name="category">
        <option value="empty"></option>
        <option value="hair">Hair</option>
        <option value="face">Face</option>
        <option value="body">Body</option>
      </select>
    </div>
    <div class="form-group">
      <label for="purpose">Purpose</label>
      <select class="form-control" name="purpose">
        {{#each purpose}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    <button type="submit" class="btn">Search</button>
  </form>

  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}




{{!-- Recipes carts --}}
  
  <div class="recipes-container">
    {{#each recipe}}
    <div class="recipe-card" >
      <a href="/all-recipes/{{this._id}}">
        <img class="recipe-card-img" src="{{this.image}}" alt="Recipe icon img">
        <h6>{{this.name}}</h6>
      
        <div>          
          {{!-- <a href="/all-recipes/{{this._id}}" class="btn">See recipe</a> --}}
          <form method="POST" action="/my-recipes/my-favorites/{{this._id}}" >
            {{#if this.alreadyFav}}
              {{!-- <button type="submit" class="btn">Already added</button> --}}
              <button type="submit" class="recipe-fav-btn"><img src="/images/favorite-added-btn.png"></button>

            {{else}}
              {{!-- <input type="img" src="/images/favorite-btn.png"> --}}
              <button type="submit" class="recipe-fav-btn"><img src="/images/favorite-btn.png"></button>

            {{/if}}
          </form>

        </div>

      </a>
    </div>
    {{/each}}

  </div>
  
 

  

</div>

