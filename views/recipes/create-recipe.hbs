<div class="content-page">

  
  
  <h4><b>Create a new recipe</b></h4>



  <div>
    <form method="POST" action="/create-recipe" enctype="multipart/form-data">
      <div class="form-group">
        <label for="recipeName" class="form-label">Recipe name</label>
        <input name="name" type="text" class="form-control" id="recipeName" placeholder="Type the name of your recipe">
      </div>

      <div class="form-group">
        <label for="category" class="form-label">Category</label>
        <select class="form-control" id="category" name="category">
            <option value="face">Face</option>
            <option value="body">Body</option>
            <option value="hair">Hair</option>
          </select>
      </div>

      <div class="form-group ">
        <label for="purpose" class="form-label">Purpose</label>
        <div "check-list">
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="anti-aging" id="purpose">
            <label class="form-check-label" for="purpose">
              Anti-aging
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="exfoliating" id="purpose">
            <label class="form-check-label" for="purpose">
              Exfoliating
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="moisturizing" id="purpose">
            <label class="form-check-label" for="purpose">
              Moisturizing
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="perfuming" id="purpose">
            <label class="form-check-label" for="purpose">
              Perfuming
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="purifying" id="purpose">
            <label class="form-check-label" for="purpose">
              Purifying
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="refreshing" id="purpose">
            <label class="form-check-label" for="purpose">
              Refreshing
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="repairing" id="purpose">
            <label class="form-check-label" for="purpose">
              Repairing
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="purpose" type="checkbox" value="sun-protection" id="purpose">
            <label class="form-check-label" for="purpose">
              Sun-Protection
            </label>
          </div>
        </div>
      </div>



