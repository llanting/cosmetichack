      <div class="form-group ">
        <label for="ingredients" class="form-label">Ingredients</label>

        {{#each ingredients}}   
          <div "check-list">
            <div class="form-check">
              <input class="form-check-input" name="ingredients" type="checkbox" value="{{this.name}}" id="purpose">
              <label class="form-check-label" for="ingredients">
                {{this.name}}
              </label>
            </div>      
          </div>
        {{/each}}

      </div>


    {{!-- ingredients list with "search bar" --}}
    {{!-- <input type="text" id="my-element"> --}}


      <div class="form-group">
        <label for="steps" class="form-label">Steps</label>
        <input name="steps" type="text" class="form-control" id="steps" placeholder="Describe the different steps">
      </div>
      
      <div class="form-group">
        <label for="time" class="form-label">Time</label>
        <input name="time" type="number" class="form-control" id="time" placeholder="In minutes">
      </div>

      <div class="form-group">
        <label for="materials" class="form-label">Materials</label>
        <input name="materials" type="text" class="form-control" id="materials" placeholder="Material needed">
      </div>
    
      <div class="form-group">
        <label for="conservation" class="form-label">Conservation</label>
        <input name="conservation" type="number" class="form-control" id="conservation" placeholder="In months">
      </div>
    

      
      <div class="form-row">
        <div class="col-md-6 mb-3 ">
          <label for="cost" class="form-label">Cost</label>
          <select class="form-control cost" id="cost" name="cost">
              <option value="low">Low</option>
              <option value="medium">Medium</option>
              <option value="high">High</option>
          </select>
        </div>
        <div class="col-md-3 mb-3 cost">
          <label for="level" class="form-label">Level</label>
          <select class="form-control cost" id="level" name="level">
            <option value="easy">Easy</option>
            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="imageUrl" class="form-label">Image</label>
        <input name="imageUrl" type="file" class="form-control" class="custom-file-upload" id="imageUrl">
      </div>

      {{#if errorMessage}}
        <p class="error-create">{{errorMessage}}</p>
      {{/if}}

      <button type="submit" class="btn">Create</button>
    </form>
  </div>
