        <span>**********</span> --}}
        
        <label for="usertype" class="label-profile-detail">User type</label>
        <span>{{currentUser.usertype}}</span>


        <button type="submit" class="btn  " >Edit</button>

    </form>


    <h6>Quick access</h6>

    <a href= "/create-recipe" class="btn">Create a new recipe</a>


    
    <div id="profile-bottom-elem">
        <a href= "/my-profile/{{currentUser._id}}/my-favorites" class="btn">My Favorites</a>
        <a href= "/my-profile/{{currentUser._id}}/my-recipes" class="btn">My Recipes</a>
    </div>
    

</div>


