<div class="content-page">
    
    <h4>Welcome {{currentUser.username}}</h4>


    <form method="GET" action="/my-profile/{{currentUser._id}}/edit" id="profile-detail">
        <h6>Personal details:</h6>

        <label for="username" class="label-profile-detail">Username</label>
        <span>{{currentUser.username}}</span>

        <label for="email" class="label-profile-detail">Email</label>
        <span>{{currentUser.email}}</span>

        {{!-- <label for="password" class="label-profile-detail">Password</label>
        <span>**********</span> --}}
        

        <button type="submit" class="btn" >Edit</button>

    </form>
    
    
    <a href="/delete-user" class="btn">Delete user</a>
   

    <h6>Quick access</h6>

 
    <div id="profile-bottom-elem">
        <a href= "/my-profile/{{currentUser._id}}/my-favorites" class="btn profile-btn">My Favorites</a>
        <a href= "/my-profile/{{currentUser._id}}/my-recipes" class="btn profile-btn">My Recipes</a>
        <a href= "/my-profile/{{currentUser._id}}/my-comments" class="btn profile-btn">My Comments</a>
    </div>

    <div id="profile-bottom-elem">
        <a href= "/create-recipe" class="btn profile-btn">Create a new recipe</a>
        <a href= "/all-recipes" class="btn profile-btn">All recipes</a>
    </div>
    

</div>


