          <a href="/all-recipes/{{this._id}}" class="card-link">        
            <img class="recipe-card-img" src="{{this.image}}" alt="Recipe icon img">
            <h6>{{this.name}}</h6>    
          </a>
        </div>
      {{/each}}
    


